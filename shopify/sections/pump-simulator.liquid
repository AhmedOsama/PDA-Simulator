{% stylesheet %}
  .pump-simulator-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
    min-height: 600px;
  }

  .pump-simulator-container {
    position: relative;
    width: 100%;
    max-width: 320px;
    aspect-ratio: 480 / 800;
  }

  .pump-simulator-iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    touch-action: pan-y pinch-zoom;
  }

  /* Mobile - larger size for better usability */
  @media (max-width: 767px) {
    .pump-simulator-wrapper {
      padding: 10px;
      min-height: auto;
    }

    .pump-simulator-container {
      max-width: 100%;
      width: 100%;
      aspect-ratio: auto;
      height: 85vh;
      min-height: 600px;
      max-height: 800px;
    }

    .pump-simulator-iframe {
      border-radius: 12px;
    }
  }

  /* Tablet */
  @media (min-width: 768px) {
    .pump-simulator-container {
      max-width: 400px;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .pump-simulator-container {
      max-width: 480px;
    }
  }

  .pump-simulator-loading {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 14px;
    color: #666;
  }

  .pump-simulator-iframe.loaded + .pump-simulator-loading {
    display: none;
  }
{% endstylesheet %}

<div class="pump-simulator-wrapper">
  <div class="pump-simulator-container">
    <iframe
      id="pump-simulator-iframe-{{ section.id }}"
      class="pump-simulator-iframe"
      src="{{ section.settings.simulator_url | append: '?embed=1' }}"
      title="{{ section.settings.iframe_title }}"
      loading="lazy"
      allow="fullscreen"
      onload="this.classList.add('loaded')"
    ></iframe>
    <div class="pump-simulator-loading">جاري التحميل...</div>
  </div>
</div>

{% schema %}
{
  "name": "Pump Simulator",
  "tag": "section",
  "class": "pump-simulator-content-section",
  "settings": [
    {
      "type": "text",
      "id": "simulator_url",
      "label": "Simulator URL",
      "default": "https://ahmedosama.github.io/PDA-Simulator/pda-mode.html",
      "info": "Enter the full URL to the pump simulator"
    },
    {
      "type": "text",
      "id": "iframe_title",
      "label": "Accessibility Title",
      "default": "Insulin Pump Simulator"
    }
  ],
  "presets": [
    {
      "name": "Pump Simulator"
    }
  ]
}
{% endschema %}
